<script>
// Theme toggle
function toggleTheme(){
let b=document.body;if(b.style.background==='#fff'){b.style.background='var(--bg)';b.style.color='var(--text)';}else{b.style.background='#fff';b.style.color='#000';}

// Wallet
let walletBalance=5000; let transactionCount=0;
function addWallet(){let amt=parseInt(document.getElementById("topup-amount").value);if(!amt||amt<=0){alert("âš ï¸ Enter valid amount");return;}walletBalance+=amt;document.getElementById("wallet-balance").textContent="Rs. "+walletBalance;document.getElementById("topup-amount").value="";transactionCount++;let t=document.getElementById("wallet-history");let r=t.insertRow();r.insertCell(0).textContent=transactionCount;r.insertCell(1).textContent=amt;r.insertCell(2).textContent=new Date().toLocaleString();}

// Buy product fly
function flyDiamond(b){const p=b.closest('.product');const i=p.querySelector('img');const t=document.getElementById('uid');const rI=i.getBoundingClientRect();const rT=t.getBoundingClientRect();const f=i.cloneNode(true);f.style.position='fixed';f.style.left=rI.left+'px';f.style.top=rI.top+'px';f.style.width=rI.width+'px';f.style.height=rI.height+'px';f.style.zIndex=2000;f.style.transition='all 1s ease-in-out';document.body.appendChild(f);setTimeout(()=>{f.style.left=rT.left+rT.width/2-rI.width/2+'px';f.style.top=rT.top+rT.height/2-rI.height/2+'px';f.style.transform='scale(0.2) rotate(720deg)';f.style.opacity='0.8';},50);setTimeout(()=>{f.remove()},1200);}
function buyProductWithFly(b){flyDiamond(b);let p=b.closest(".product");let price=parseInt(p.getAttribute("data-price"));if(walletBalance<price){alert("âš ï¸ Insufficient Wallet Balance!");return;}walletBalance-=price;document.getElementById("wallet-balance").textContent="Rs. "+walletBalance;document.getElementById("amount").value=price;document.getElementById("checkout").scrollIntoView({behavior:"smooth"});alert("âœ… Rs. "+price+" deducted from Wallet. Fill ID & WhatsApp to confirm.");}

// Diamond delivery simulation
function deliverDiamonds(){let u=document.getElementById("uid").value;let w=document.getElementById("whatsapp").value;let a=document.getElementById("amount").value;if(!u||!w||!a){alert("âš ï¸ Fill all fields");return;}document.getElementById("loader").style.display="flex";setTimeout(()=>{document.getElementById("loader").style.display="none";document.getElementById("r_uid").textContent=u;document.getElementById("r_whatsapp").textContent=w;document.getElementById("r_amount").textContent=a;document.getElementById("receipt").style.display="flex";startConfetti();transactionCount++;let t=document.getElementById("wallet-history");let r=t.insertRow();r.insertCell(0).textContent=transactionCount;r.insertCell(1).textContent=a;r.insertCell(2).textContent=new Date().toLocaleString();alert("âœ… Diamonds delivered to UID: "+u+" (Simulation)");},2500);}
function closeReceipt(){document.getElementById("receipt").style.display="none";stopConfetti();}

// Confetti
let confettiInterval;
function startConfetti(){const c=document.getElementById("confetti");c.innerHTML="";confettiInterval=setInterval(()=>{const d=document.createElement("div");d.style.position="absolute";d.style.width=d.style.height=Math.random()*10+5+"px";d.style.background=`hsl(${Math.random()*360},100%,50%)`;d.style.left=Math.random()*100+"%";d.style.top="-10px";d.style.opacity=0.9;d.style.borderRadius="50%";d.style.boxShadow="0 0 10px #fff";d.style.animation=`fall ${2+Math.random()*3}s linear forwards`;c.appendChild(d);setTimeout(()=>{d.remove()},5000);},50);}
function stopConfetti(){clearInterval(confettiInterval);}
</script>

